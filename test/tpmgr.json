{
    "encoding"   : "UTF-8",
    "schema" : "1.0",

    "General" : {
        "application" : "rsked",
        "sched_path" : "~/.config/rsked/schedule.json",
        "version" : "2021-01-01T11:36"
    },

    "Inet_checker" : {
        "enabled" : false,
        "refresh" : 60
    },

    "VU_monitor" : {
        "enabled" : false,
        "vu_bin_path" : "~/bin/vumonitor",
        "timeout" : 40
    },

    "Mpd_player" : {
        "enabled" : false,
        "debug" : false,
        "run_mpd" : true,
        "bin_path" : "/usr/bin/mpd",
        "socket" : "/run/user/1000/mpd.socket",
        "host" : "localhost",
        "port" : 6600,
        "volume" : 100
    },

    "Sdr_player" : {
        "enabled" : true,
        "gqrx_bin_path"  : "~/bin/gqrx",
        "gqrx_work"  : "~/.config/gqrx/gqrx.conf",
        "gqrx_gold"  : "~/.config/gqrx/gold.conf",
        "low_s"      : -20.0,
        "low_low_s"  : -40.0
    },

    "Vlc_player" : {
        "enabled" : true,
        "volume" : 100,
        "vlc_bin_path"   : "/usr/bin/vlc"
    },

    "Ogg_player" : {
        "enabled" : true,
        "device_type" : "alsa",
        "ogg_bin_path"   : "/usr/bin/ogg123"
    },

    "Mp3_player" : {
        "enabled" : false,
        "device_type" : "alsa",
        "mp3_bin_path"   : "/usr/bin/mpg321"
    }
    
}

{
    "encoding" : "UTF-8",
    "schema" : "1.2",

    "General" : {
        "application" : "rsked",
        "sched_path" : "~/.config/rsked/schedule.json",
        "version" : "2022-04-01T18:00",
        "description" : "example for 64-bit x86 Linux"
    },

    "Inet_checker" : {
        "enabled" : true,
        "refresh" : 60
    },

    "VU_monitor" : {
        "enabled" : true,
        "bin_path" : "~/bin/vumonitor",
        "timeout" : 40
    },

    "Vlc_player" : {
	"description" : "any player record may have a description string",
        "enabled" : false,
        "debug" : false,
        "bin_path" : "/usr/bin/vlc",
        "volume" : 100
    },

    "Mpd_player" : {
        "enabled" : true,
        "debug" : false,
        "run_mpd" : true,
        "bin_path" : "/usr/bin/mpd",
        "socket" : "/run/user/1000/mpd.socket",
        "host" : "localhost",
        "port" : 6600,
        "volume" : 100
    },

    "Nrsc5_player" : {
        "enabled" : true,
        "bin_path"  : "/usr/local/bin/nrsc5",
        "device_index" : 0
    },

    "Sdr_player" : {
        "enabled" : true,
        "bin_path"  : "~/bin/gqrx",
        "work_conf"  : "~/.config/gqrx/gqrx.conf",
        "gold_conf"  : "~/.config/gqrx/gold.conf",
        "low_s"      : -20.0,
        "low_low_s"  : -40.0,
        "device_vendor" : "0bda",
        "device_product" : "2838"
    },

    "Ogg_player" : {
        "enabled" : true,
        "device_type" : "alsa",
        "bin_path"   : "/usr/bin/ogg123"
    },

    "Mp3_player" : {
        "enabled" : true,
        "device_type" : "alsa",
        "bin_path"   : "/usr/bin/mpg321"
    }
}

// cooling-rpi.json: Install in $HOME/.config/rsked/cooling.json
{
    "encoding"   : "UTF-8",
    "schema"     : "1.1",

    "General" : {
        "application" : "cooling",
        "version"  : "2.3",
        "poll_msec"   : 250,
        "poll_trace" : 300
    },

    "Rsked" : {
        "enabled" : true,
        "rsked_bin_path" : "~/bin/rsked",
        "rsked_config_path" : "~/.config/rsked/rsked.json",
        "rsked_debug" : false,
        "kill_pattern"   : "'ogg123|mpg321|gqrx|mpd'",
        "mpd_stop_cmd"   : "/usr/bin/mpc -p 6600 stop"
    },

    "Cooling" : {
        "enabled" : true,
        "fan_gpio" : 4,
        "sensor" : "/sys/class/thermal/thermal_zone0/temp",
        "cool_start_temp" : 65.0,
        "cool_stop_temp"  : 55.0,
        "min_cool_secs" : 301
    },

    "SnoozeButton" : {
        "enabled" : true,
        "button_gpio" : 18
    },

    "PanelLEDs" : {
        "enabled" : true,
        "green_gpio" : 17,
        "red_gpio" : 27
    }
}
